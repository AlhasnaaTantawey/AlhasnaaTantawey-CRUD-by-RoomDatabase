<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.forgetPass.ForgetPasswordActivity">
    <TextView
        android:id="@+id/activity_forget_pass_textview_forgetpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="نسيت كلمه المرور"
        android:textSize="18sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/activity_forget_pass_textview_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_forget_pass_textview_forgetpass"
        android:text="الرجاء ادخال عنوان البريد الالكترونى  ليتم ارسال الكود  لتجديد كلمه المرور"
        android:textSize="18sp"
        android:fontFamily="sans-serif-black"
       android:textColor="#909090"
        android:layout_marginTop="5dp"
        android:gravity="center"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/activity_forget_pass_edittext_email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="البريد الالكترونى  "
        app:endIconMode="clear_text"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_forget_pass_textview_send"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/textview_errorinemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="1dp"
        android:text="يجب ادخال البريد الالكترونى "
        android:textColor="#fc1010"
        android:drawableRight="@drawable/ic_baseline_error_outline_24"
        android:fontFamily="sans-serif-black"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_forget_pass_edittext_email"
        />

    <Button
        android:id="@+id/activity_main_button_create_an_account"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="90dp"
        android:backgroundTint="#3f3bf5"
        android:text="متابعه "
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_forget_pass_edittext_email" />


</androidx.constraintlayout.widget.ConstraintLayout>