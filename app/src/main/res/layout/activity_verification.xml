<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.verification.VerificationActivity">
    <ImageView
        android:id="@+id/activity_verifiction_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:src="@drawable/verfiction2"
        />

    <TextView
        android:id="@+id/activity_verifiction_textview_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_verifiction_imageview"
        android:text="التحقق"
        android:textSize="18sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/activity_verifiction_textview_newword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_verifiction_textview_word"
        android:text="ادخل رقمك المكون من 4 ارقام الذى تم ارساله الى بريدك الالكترونى   "
        android:textSize="18sp"
        android:fontFamily="sans-serif-black"
        android:textColor="#909090"
        android:layout_marginTop="5dp"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/activity_verifiction_edittext1"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape2"
        android:textSize="28sp"
        android:paddingRight="14dp"
        android:inputType="number"
        android:layout_marginRight="70dp"
        app:layout_constraintTop_toBottomOf="@id/activity_verifiction_textview_newword"
        />

    <EditText
        android:id="@+id/activity_verifiction_edittext2"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toLeftOf="@id/activity_verifiction_edittext1"
        android:background="@drawable/shape2"
        android:textSize="28sp"
        android:paddingRight="14dp"
        android:inputType="number"
        android:layout_marginRight="40dp"
        app:layout_constraintTop_toBottomOf="@id/activity_verifiction_textview_newword"
        />

    <EditText
        android:id="@+id/activity_verifiction_edittext3"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:textSize="28sp"
        android:paddingRight="14dp"
        app:layout_constraintRight_toLeftOf="@id/activity_verifiction_edittext2"
        android:background="@drawable/shape2"
        android:layout_marginRight="40dp"
        app:layout_constraintTop_toBottomOf="@id/activity_verifiction_textview_newword"
        />

    <EditText
        android:id="@+id/activity_verifiction_edittext4"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:textSize="28sp"
        android:paddingRight="14dp"
        app:layout_constraintRight_toLeftOf="@id/activity_verifiction_edittext3"
        android:background="@drawable/shape2"
        android:layout_marginRight="40dp"
        app:layout_constraintTop_toBottomOf="@id/activity_verifiction_textview_newword"
        />

    <Button
        android:id="@+id/activity_main_button_create_an_account"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#3f3bf5"
        android:text="متابعه "
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_verifiction_edittext2" />

    <TextView
        android:id="@+id/activity_verifiction_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:text="اعاده ارسال الرمز فى 15 ثاتيه"
        android:textColor="#909090"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_main_button_create_an_account" />
</androidx.constraintlayout.widget.ConstraintLayout>